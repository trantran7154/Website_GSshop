    <div class="image-container set-full-height" style="background-image: url('../../Content/Info/img/paper-1.jpeg'); ">       
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="orange" id="wizardProfile">
                            <script>
                                function valiInfo() {
                                    var user_telephone = document.getElementById("user_telephone").value;
                                    // regex telephone
                                    var re_telephone = /((09|03|07|08|05)+([0-9]{8})\b)/g;
                                    var user_email = document.getElementById("user_email").value;
                                    // regex email
                                    var re_email = /[A-Z0-9._%+-]+@a+.+.[A-Z]{2,4}/igm;
                                    if (re_telephone.test(user_telephone) == false) {
                                        if (user_telephone != "") {
                                            document.getElementById("testInfo").innerHTML = "<div class='alert alert-danger text-center'><i class='fa fa-times-circle' style='color: red'>&nbsp;</i>Số điện thoại không hợp lệ !</div>";
                                        }
                                        else {
                                            document.getElementById("testInfo").innerHTML = "<div class='alert alert-danger text-center'><i class='fa fa-times-circle' style='color: red'>&nbsp;</i>Số điện thoại không được bỏ trống !</div>";
                                        }
                                    }
                                    else if (re_email.test(user_email) == false) {
                                        if (user_email != "") {
                                            document.getElementById("testInfo").innerHTML = "<div class='alert alert-danger text-center'><i class='fa fa-times-circle' style='color: red'>&nbsp;</i>Email/Gmail không được bỏ trống !</div>";
                                        }
                                        else {
                                            document.getElementById("testInfo").innerHTML = "<div class='alert alert-danger text-center'><i class='fa fa-times-circle' style='color: red'>&nbsp;</i>Email/Gmail không được bỏ trống !</div>"; 
                                        }
                                    }
                                    else {
                                        return true;
                                    }
                                    return false;
                                }
                            </script>
                            <form action="@Url.Action("UpdateInfo","Account")" onsubmit="return valiInfo()" method="post">
                                <!-- You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure" -->
                                <div class="wizard-header text-center">
                                    <h2 class="wizard-title text-danger">THÔNG TIN CÁ NHÂN</h2>
                                    <p class="category">Thông tin này sẽ cho chúng tôi biết thêm về bạn.</p>
                                </div>
                                <div class="wizard-navigation">
                                    <div class="progress-with-circle">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                                    </div>
                                    <ul>
                                        <li>
                                            <a href="#about" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-user"></i>
                                                </div>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#address" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-map"></i>
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="about">
                                        <div class="row">
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="~/Content/Info/img/default-avatar.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                                                        <input type="file" id="wizard-picture" name="user_image">
                                                    </div>
                                                    <h6>Chọn Ảnh Đại Diện</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Họ và tên</label>
                                                    <input type="text" class="form-control" placeholder="* Trường bắt buộc" required="" name="user_nicename">
                                                </div>
                                                <div class="form-group">
                                                    <label>Số điện thoại</label>
                                                    <input type="text" class="form-control" placeholder="* Trường bắt buộc" id="user_telephone" required="" name="user_telephone">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" class="form-control" placeholder="* Trường bắt buộc" id="user_email" required="" name="user_email" value="@user.user_email">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="address">
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Địa chỉ</label>
                                                    <input type="text" class="form-control" placeholder="* Trường bắt buộc" required="" name="user_address">
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Tỉnh/ Thành Phố <small>(* Trường bắt buộc)</small></label><br>
                                                    <select class="form-control" name="user_provincecity">
                                                        <option value="Afghanistan"> Chọn Tỉnh/ Thành Phố </option>
                                                        <option value="Albania"> Albania </option>
                                                        <option value="Algeria"> Algeria </option>
                                                        <option value="American Samoa"> American Samoa </option>
                                                        <option value="Andorra"> Andorra </option>
                                                        <option value="Angola"> Angola </option>
                                                        <option value="Anguilla"> Anguilla </option>
                                                        <option value="Antarctica"> Antarctica </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Quận/ Huyện <small>(* Trường bắt buộc)</small></label><br>
                                                    <select class="form-control" name="user_district">
                                                        <option value="Afghanistan"> Chọn Quận/ Huyện </option>
                                                        <option value="Albania"> Albania </option>
                                                        <option value="Algeria"> Algeria </option>
                                                        <option value="American Samoa"> American Samoa </option>
                                                        <option value="Andorra"> Andorra </option>
                                                        <option value="Angola"> Angola </option>
                                                        <option value="Anguilla"> Anguilla </option>
                                                        <option value="Antarctica"> Antarctica </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div id="testInfo"></div>
                                </div>                                
                                <div class="wizard-footer">
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-warning btn-wd' value='Tiếp Tục' />
                                        <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd' value='Lưu Thông Tin' />
                                    </div>
                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-default btn-wd' value='Trở Về' />
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </form>
                        </div>
