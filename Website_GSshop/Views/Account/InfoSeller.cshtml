@using Website_GSshop.Models
@model Seller
@{
    ViewBag.Title = "InfoSeller";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Seller sellerer = (Seller)Session["seller"];

    var info_edit = "infoedit";
    var create_seller = "createseller";
    var change_pass = "change_pass";
}

<style>
    body {
        font-size: 15px;
    }
</style>
@Html.Action("CSS_Sematic", "Display")

<div class="emp-profile" style="background-color: #f9f9f9">
    <div class="row">
        <div class="col-md-2">
            <div class="profile-work">
                <p style="color: black">Xin chào, @sellerer.seller_nicename</p>
                <br />
                <p class="text-info" style="font-size: 16px">Quản lý tài khoản</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h2>QUẢN LÝ TÀI KHOẢN</h2>
                    <div class="container-fluid">
                        <br />
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4" style="background-color: #ffffff">
                                    <br />
                                    Thông tin cá nhân | <a href="@Url.Action("UpdateInfoSeller","Account", new {id = Model.seller_id})" data-toggle="modal" data-target="#@info_edit@Model.seller_id"><small>Chỉnh sửa</small></a>
                                    <br />
                                    <br />
                                    <p>@sellerer.seller_nicename</p>
                                    <p>@sellerer.seller_email</p>
                                    <br />
                                    <a href="#">Đăng ký nhận bản tin</a>
                                    <br />
                                    <br />
                                </div>
                                <div class="col-md-8">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6" style="background-color: #ffffff">
                                                <br />
                                                Số địa chỉ | <a href="@Url.Action("CreateInfoSeller","Account", new {id = Model.seller_id})" data-toggle="modal" data-target="#@create_seller@Model.seller_id"><small>Thêm</small></a>
                                                <br />
                                                <br />
                                                @if (sellerer.seller_address == null && sellerer.seller_district == null && sellerer.seller_provincecity == null)
                                                {
                                                    <p>Lưu thông địa chỉ thanh toán</p>
                                                }
                                                else
                                                {
                                                    <p>@Model.seller_address,&nbsp;@Model.seller_district,&nbsp;@Model.seller_provincecity</p>
                                                }
                                                <br />
                                                <i class="fa fa-map-marker" style="font-size: 55px"></i>
                                                <br />
                                                <br />
                                            </div>
                                            <div class="col-md-6" style="background-color: #ffffff; border-left: 2px solid #eff0f5">
                                                <br />
                                                <br />
                                                <br />
                                                <a href="@Url.Action("ChangePassWordSeller","Account", new {id = Model.seller_id})" data-toggle="modal" data-target="#@change_pass@Model.seller_id" class="font-weight-600 text-center"><h3>Thay đổi mật khẩu</h3></a>
                                                <br />
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Sửa Tên + Email-->
        <div class="modal fade mt-8" id="@info_edit@Model.seller_id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            <svg height="20" viewBox="0 -1 401.5411 401" width="20" xmlns="http://www.w3.org/2000/svg">
                                <path d="m381.289062 32.242188c13.671876 13.664062 13.671876 35.824218 0 49.488281l-17.679687 17.679687-61.230469-61.230468 17.679688-17.679688c13.671875-13.667969 35.832031-13.667969 49.5 0zm0 0" fill="#00acea" />
                                <path d="m363.609375 99.410156-160.148437 160.160156h-.011719l-61.230469-61.230468 160.160156-160.160156zm0 0" fill="#00efd1" />
                                <path d="m142.21875 198.339844 61.230469 61.230468-.570313.570313-84.6875 23.460937 23.457032-84.691406zm0 0" fill="#fedb41" />
                                <g fill="#083863">
                                    <path d="m370.589844 250.960938c-5.523438 0-10 4.476562-10 10v88.789062c-.019532 16.5625-13.4375 29.980469-30 30h-280.589844c-16.5625-.019531-29.980469-13.4375-30-30v-260.589844c.019531-16.558594 13.4375-29.980468 30-30h88.789062c5.523438 0 10-4.476562 10-10 0-5.523437-4.476562-10-10-10h-88.789062c-27.601562.03125-49.96875 22.398438-50 50v260.589844c.03125 27.601562 22.398438 49.96875 50 50h280.589844c27.601562-.03125 49.96875-22.398438 50-50v-88.789062c0-5.523438-4.476563-10-10-10zm0 0" />
                                    <path d="m376.632812 13.429688c-17.589843-17.546876-46.058593-17.546876-63.644531 0l-178.410156 178.410156c-1.21875 1.222656-2.105469 2.738281-2.566406 4.398437l-23.457031 84.691407c-.964844 3.472656.015624 7.191406 2.5625 9.742187 2.550781 2.546875 6.269531 3.527344 9.742187 2.566406l84.691406-23.460937c1.664063-.460938 3.183594-1.347656 4.40625-2.570313l.566407-.570312 177.835937-177.835938c17.574219-17.570312 17.574219-46.058593 0-63.628906zm-229.675781 203.789062 37.613281 37.617188-52.03125 14.414062zm56.5 42.355469v-.007813l6.519531 6.519532zm0-14.140625-47.09375-47.09375 146.015625-146.015625 47.089844 47.085937zm170.761719-170.773438-10.609375 10.609375-47.085937-47.089843 10.609374-10.609376c9.765626-9.746093 25.582032-9.746093 35.351563 0l11.734375 11.746094c9.765625 9.757813 9.765625 25.585938 0 35.34375zm0 0" />
                                </g>
                            </svg> &nbsp;SỬA DANH MỤC CHÍNH
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("UpdateInfoSeller", "Account", FormMethod.Post, new { @class = "ui form segment", @enctype = "multipart/form-data" }))
                        {
                            <form method="post" class="mb-4 ui form">
                                <div class="two fields">
                                    <div class="field">
                                        <label>Họ và tên</label>
                                        <input type="text" name="seller_nicename" value="@Model.seller_nicename" />
                                    </div>
                                    <div class="field">
                                        <label>Email</label>
                                        <input type="text" name="seller_email" value="@Model.seller_email" />
                                    </div>
                                    <div class="field">
                                        <label>Tên shop</label>
                                        <input type="text" name="seller_nameshop" value="@Model.seller_nicename" />
                                    </div>
                                </div>
                                <div class="ui error message"></div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> ĐÓNG</button>
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> SỬA</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--//Sửa Tên + Email-->
        <!--Thêm Địa Chỉ-->
        <div class="modal fade mt-8" id="@create_seller@Model.seller_id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            <svg id="user" enable-background="new 0 0 300 300" height="40" viewBox="0 0 300 300" width="40" xmlns="http://www.w3.org/2000/svg"><path d="m38 38h224v224h-224z" fill="#fff" /><path d="m262 270h-224c-4.422 0-8-3.578-8-8v-224c0-4.422 3.578-8 8-8h224c4.422 0 8 3.578 8 8v224c0 4.422-3.578 8-8 8zm-216-16h208v-208h-208z" fill="#5c128d" /><path d="m54 54h16v16h-16z" fill="#e86436" /><path d="m78 54h16v16h-16z" fill="#f6d831" /><path d="m102 54h16v16h-16z" fill="#2ee52b" /><path d="m38 78h224v16h-224z" fill="#5c128d" /><path d="m126 230h48v16h-48z" fill="#d6d6d6" /><circle cx="150" cy="146" fill="#ffdea2" r="32" /><path d="m150 186c-22.055 0-40-17.945-40-40s17.945-40 40-40 40 17.945 40 40-17.945 40-40 40zm0-64c-13.234 0-24 10.766-24 24s10.766 24 24 24 24-10.766 24-24-10.766-24-24-24z" fill="#5c128d" /><path d="m166 174h-33c-17.673 0-32 14.327-32 32v8h97v-8c0-17.673-14.327-32-32-32z" fill="#816982" /><path d="m198 222h-97c-4.422 0-8-3.578-8-8v-8c0-22.055 17.945-40 40-40h33c22.055 0 40 17.945 40 40v8c0 4.422-3.578 8-8 8zm-89-16h81c0-13.234-10.766-24-24-24h-33c-13.234 0-24 10.766-24 24z" fill="#5c128d" /></svg> &nbsp;THÊM ĐỊA CHỈ
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("CreateInfoSeller", "Account", FormMethod.Post, new { @class = "ui form segment", @enctype = "multipart/form-data" }))
                        {
                            <form method="post" class="mb-4 ui form">
                                <div class="three fields">
                                    <div class="field">
                                        <label>Địa chỉ</label>
                                        <input type="text" name="seller_address" />
                                    </div>
                                    <div class="field">
                                        <label>Quận/Huyện</label>
                                        <select name="seller_district">
                                            <option>Chọn Quận/Huyện</option>
                                            <option>Bến Cát</option>
                                        </select>
                                    </div>
                                    <div class="field">
                                        <label>Tỉnh/TP</label>
                                        <select name="seller_provincecity">
                                            <option>Chọn Tỉnh/Thành Phố</option>
                                            <option>Bình Dương</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="ui error message"></div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> ĐÓNG</button>
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> ĐĂNG</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--//Thêm Địa Chỉ-->
        <!--Đổi Mật Khẩu-->
        <div class="modal fade mt-8" id="@change_pass@Model.seller_id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            <svg id="user" enable-background="new 0 0 300 300" height="40" viewBox="0 0 300 300" width="40" xmlns="http://www.w3.org/2000/svg"><path d="m38 38h224v224h-224z" fill="#fff" /><path d="m262 270h-224c-4.422 0-8-3.578-8-8v-224c0-4.422 3.578-8 8-8h224c4.422 0 8 3.578 8 8v224c0 4.422-3.578 8-8 8zm-216-16h208v-208h-208z" fill="#5c128d" /><path d="m54 54h16v16h-16z" fill="#e86436" /><path d="m78 54h16v16h-16z" fill="#f6d831" /><path d="m102 54h16v16h-16z" fill="#2ee52b" /><path d="m38 78h224v16h-224z" fill="#5c128d" /><path d="m126 230h48v16h-48z" fill="#d6d6d6" /><circle cx="150" cy="146" fill="#ffdea2" r="32" /><path d="m150 186c-22.055 0-40-17.945-40-40s17.945-40 40-40 40 17.945 40 40-17.945 40-40 40zm0-64c-13.234 0-24 10.766-24 24s10.766 24 24 24 24-10.766 24-24-10.766-24-24-24z" fill="#5c128d" /><path d="m166 174h-33c-17.673 0-32 14.327-32 32v8h97v-8c0-17.673-14.327-32-32-32z" fill="#816982" /><path d="m198 222h-97c-4.422 0-8-3.578-8-8v-8c0-22.055 17.945-40 40-40h33c22.055 0 40 17.945 40 40v8c0 4.422-3.578 8-8 8zm-89-16h81c0-13.234-10.766-24-24-24h-33c-13.234 0-24 10.766-24 24z" fill="#5c128d" /></svg> &nbsp;THAY ĐỔI MẬT KHẨU
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("ChangePassWordSeller", "Account", FormMethod.Post, new { @class = "ui form segment", @enctype = "multipart/form-data" }))
                        {
                            <div class="container-fluid">
                                <div class="field">
                                    <label>Mật khẩu cũ</label>
                                    <input type="password" name="pass_old" />
                                </div>
                                <div class="field">
                                    <label>Mật khẩu mới</label>
                                    <input type="password" name="seller_pass" />
                                </div>
                                <div class="field">
                                    <label>Nhập lại mật khẩu</label>
                                    <input type="password" name="pass_repeat" />
                                </div>
                                <div class="ui error message"></div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> ĐÓNG</button>
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> THAY ĐỔI</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--//Đổi Mật Khẩu-->
    </div>
</div>

