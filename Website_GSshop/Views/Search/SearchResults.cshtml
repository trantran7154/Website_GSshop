@using Website_GSshop.Models;
@model List<Product>
@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Category ses_categories = (Category)Session["categories"];
}
<div class="container-fluid mt-4" style="background-color: #f9f9f9">
    <center>
        <b style="font-family: 'Segoe UI'; font-size: 22px">@ViewBag.Notification với từ khóa "<sapn style="color: red">@ViewBag.KeyWord</sapn>"</b>
    </center>
    <div class="container-fluid mt-3" style="background-color: #f9f9f9">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-2">
                    <div class="card-1">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center time"><small><span class="product-new-label1"><b class="test">- 40%</b></span></small> </div>
                            <div class="pr-3 row justify-content-end">
                                <div class="fa fa-heart-o like"></div>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <img src="~/Content/Layout/images/@item.product_image" width="250" />
                        </div>
                        <a href="@Url.Action("ProductDetail","View", new { @id = item.product_id })" class="text-left text-dark"><h4 class="text-left mt-2">@item.product_name</h4></a>
                        <span class="text-success">@{float pricesale = (float)item.product_sale;} @pricesale.ToString("#,##0") ₫</span> <i class="ic-dynamic-badge ic-dynamic-badge-freeShipping ic-dynamic-group-2 mt-1 ml-2" style="background-image: url(&quot;//laz-img-cdn.alicdn.com/tfs/TB1QTkMXG67gK0jSZFHXXa9jVXa-45-28.png&quot;); width: 30px; height: 30px;" data-spm-anchor-id="a2o4n.searchlistcategory.list.i36.58b95752VuSb8Z"></i>
                        <br />
                        <s class="text-gray">@{float price = (float)item.product_price;} @price.ToString("#,##0") ₫</s>
                        <a href="@Url.Action("ProductDetail","View", new {@id = item.product_id})">
                            <div class="mt-1 button_voucher">
                                <span class="text font-button text-uppercase">Mua Ngay</span>
                            </div>
                        </a>
                    </div>
                    <br />
                </div>
            }
        </div>
    </div>
</div>
