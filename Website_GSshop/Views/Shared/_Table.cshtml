@using Website_GSshop.Models
@model List<Product>
@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="p-box">
            <div class="p-top">
                <span class="label1 best-seller-label test mt-5 ml-2">Best seller</span>
                <i class="ic-dynamic-badge ic-dynamic-badge-freeShipping ic-dynamic-group-2 p-heart mt-3" style="background-image: url(&quot;//laz-img-cdn.alicdn.com/tfs/TB1QTkMXG67gK0jSZFHXXa9jVXa-45-28.png&quot;); width: 25.7143px; height: 16px;" data-spm-anchor-id="a2o4n.searchlistcategory.list.i36.58b95752VuSb8Z"></i>
            </div>
            <div class="text-center p-4">
                <img id="main-image" src="~/Content/Layout/images/@item.product_image" width="300" height="300" />
                <div class="thumbnail1 text-center" id="lightSlider">
                    @foreach (var item1 in Model.Where(n => n.product_related == item.product_related).Take(3))
                    {
                        <img onclick="" src="~/Content/Layout/images/@item.product_image" width="70" style="height: 48px; width: 48px">
                    }
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("ProductDetail","View", new {@id = item.product_id})"><span class="p-category">@item.product_name</span></a>
                    <br />
                    <small class="text-danger">@{float price = (float)item.product_price;} @price.ToString("#,##0") ₫</small>
                    <br />
                    <small><s>@{float pricesale = (float)item.product_sale;} @pricesale.ToString("#,##0") ₫</s> -10%</small>
                </div>
            </div>
        </div>
        <br />
    </div>
}