                <div class="scroll_slider mr-6" style="margin-top: 3.5%">
                    <span class="next">
                        <span class="fa fa-angle-right" style='font-size:30px'></span>
                    </span>
                    <div class="main">
                        <ul class="list-style">
                            @foreach (var item in Model.Where(n => n.gsmail_id == 3).Take(8))
                            {
                                <li class="col-md-3">
                                    <div class="card-1">
                                        <div class="text-center">
