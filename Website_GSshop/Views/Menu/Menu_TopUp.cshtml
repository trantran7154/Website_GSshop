                                        </div>
                                        <h5 class="text-left">Áo thun croptop</h5>
                                        @{
                                            float sale = ((float)item.product_price * (1 - ((float)item.product_percent / 100)));
                                        }
                                        <span class="text-orange">₫ @sale.ToString("#,##0")</span> <i class="ic-dynamic-badge ic-dynamic-badge-freeShipping ic-dynamic-group-2 mt-1 ml-2" style="background-image: url(&quot;//laz-img-cdn.alicdn.com/tfs/TB1QTkMXG67gK0jSZFHXXa9jVXa-45-28.png&quot;); width: 30px; height: 30px;" data-spm-anchor-id="a2o4n.searchlistcategory.list.i36.58b95752VuSb8Z"></i>
                                        <br />
                                        <s class="text-gray">₫ @{float price = (float)item.product_price;} @price.ToString("#,##0")</s><span class="text-dark ml-2">-20%</span>
                                    </div>
                                    <br />
                                </li>
                            }
                        </ul>
                    </div>
                    <span class="prev">
                        <span class="fa fa-angle-left" style='font-size:30px'>
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>    
<script>
    $('.scroll_slider .next span').click(function () {
        var x = $(this).parents('.scroll_slider').find('.main ul');
        var marginRight = x.css('marginRight');
        var b = parseFloat(marginRight);
        if (b == 0) {
            x.animate({ 'marginRight': '-800px' }, 800)

        }
        else {
            x.animate({ 'marginRight': '+=800px' }, 800)
        }
    });
    $('.scroll_slider .prev span').click(function () {

        var x = $(this).parents('.scroll_slider').find('.main ul');
        var marginRIght = x.css('marginRight');
        var a = parseFloat(marginRIght);
        if (a <= -800) {
            x.animate({ 'marginRight': '0px' }, 800)
        }
        else {
            x.animate({ 'marginRight': '-=800px' }, 800)
        }
    })
</script>

