@using Website_GSshop.Models
@model List<Product>
@{
    ViewBag.Title = "CollectionsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Data_GSShopEntities db = new Data_GSShopEntities();
}
<div class="collection-product">
    <div class="collection-product-banner J_banner" data-spm-anchor-id="a2o4n.col_prod_list.0.i0.6cd1233dOrKToa" style="background-image: url('../../Content/Layout/images/collection.jpg');">
        <div class="title J_title mt-1">@ViewBag.name</div>
        <br />
        <div class="subtitle J_Subtitle ml-2"> Sale Cực Lớn Đến 70%</div>
        <br />
    </div>
</div>
<br />
<center>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model.Where(n => n.product_percent > 60))
            {
                <div class="col-md-2">
                    <div class="p-box">
                        <div class="p-top">
                            <span class="label1 best-seller-label test mt-2 ml-2">Best seller</span>
                            <i class="ic-dynamic-badge ic-dynamic-badge-freeShipping ic-dynamic-group-2 p-heart mt-2" style="background-image: url(&quot;//laz-img-cdn.alicdn.com/tfs/TB1QTkMXG67gK0jSZFHXXa9jVXa-45-28.png&quot;); width: 25.7143px; height: 16px;" data-spm-anchor-id="a2o4n.searchlistcategory.list.i36.58b95752VuSb8Z"></i>
                        </div>
                        <div class="text-center p-4">
                            <img id="main-image" src="~/Content/Layout/images/@item.product_image" width="300" />
                        </div>
                        <div class="p-desc">
                            <a href="@Url.Action("ProductDetail", "View", new { @id = item.product_id })"><h3 class="p-category">@item.product_name</h3></a>
                            @{
                                float sale = ((float)item.product_price * (1 - ((float)item.product_percent / 100)));
                            }
                            <h5 class="text-danger">@sale.ToString("#,##0") ₫</h5>
                            <h5><s>@{float price = (float)item.product_price;} @price.ToString("#,##0") ₫</s> &nbsp;-@item.product_percent%</h5>
                        </div>
                        <div class="row mt-1 mb-1">
                            <div class="col-md-6">
                                <div class="p-price">
                                    <div class="p-stars">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <small class="text-dark">(6)</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="pill1 text-right">&nbsp;&nbsp;&nbsp;&nbsp;<b>Việt Nam</b>&nbsp;&nbsp;&nbsp;&nbsp;</div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            }
        </div>
        @ViewBag.Note
        <div class="card-jfy-load-more J_LoadMore">
            <a class="button J_LoadMoreButton text-info">TẢI THÊM</a>
        </div>
    </div>
</center>
<hr />


