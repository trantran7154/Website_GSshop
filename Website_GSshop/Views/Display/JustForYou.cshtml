@using Website_GSshop.Models
@model List<Product>
<center>
    <div class="container-fluid">
        <br />
        <h2 class="head-style-2">
            <img src="~/Content/Layout/images/icons8-fire-48.png" />Dành cho bạn
        </h2>
        <br />
        <div class="layout">
            <section class="inner">
                <ul class="grid">
                    @foreach(var item in Model)
                    {
                        <li class="grid-tile">
                            <div class="item">
                                <span class="product-new-label1"><b class="test">- 40%</b></span>
                                <span class="product-discount-label">
                                    <b class="pnl-favorites">
                                        <div class="pnl-ic-wrapper">
                                            <span class="pnl-ic"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 32 32" style="enable-background:new 0 0 32 32;" xml:space="preserve"><path d="M22.6,6.5c-2.9,0-5.4,1.7-6.6,4.1c-1.2-2.4-3.7-4.1-6.6-4.1C5.3,6.5,2,9.8,2,13.9C2,23.7,15.8,29,15.8,29S30,23.6,30,13.9C30,9.8,26.7,6.5,22.6,6.5L22.6,6.5z"></path></svg></span>
                                        </div>
                                    </b>
                                </span>
                                <div class="item-img" style="background-image: url('../../Content/Layout/images/@item.product_image'); width: 180px; background-size: cover;"></div>
                                <div class="item-pnl">
                                    <div class="pnl-wrapper">
                                        <div class="pnl-description">
                                            <a href="@Url.Action("ProductDetail","View", new {@id = item.product_id})"><span class="pnl-label">@item.product_name</span></a>
                                            <span class="pnl-price"><s class="text-danger">@{float price = (float)item.product_price;} @price.ToString("#,##0") ₫</s>&nbsp;@{float pricesale = (float)item.product_sale;} @pricesale.ToString("#,##0") ₫</span>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-8 text-left">
                                                    <div class="p-stars">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <small class="text-dark">(6)</small>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <p>TP.HCM</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="pnl-tocart2">
                                            <div class="pnl-ic-wrapper">
                                                <a class="pnl-ic" href="@Url.Action("ProductDetail","View", new {@id = item.product_id})"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 32 32" style="enable-background:new 0 0 32 32;" xml:space="preserve"><g><path d="M25.4,29H6.6c-1.7,0-3-1.4-2.8-2.9l1.9-13.8C5.9,11,6.6,10,8,10h16c1.4,0,2.1,1,2.3,2.3l1.9,13.8 C28.4,27.6,27.1,29,25.4,29z"></path><path d="M10.6,12.7V8.4C10.6,5.4,13,3,16,3h0c3,0,5.4,2.4,5.4,5.4v4.3"></path></g></svg></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </section>
        </div>
    </div>
</center>
<script>
     /* Demo purposes only */
  $(".hover").mouseleave(
    function () {
      $(this).removeClass("hover");
    }
  );
</script>
<br />
<br />