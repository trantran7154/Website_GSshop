@using Website_GSshop.Models
@model List<Collection>
<center>
    <div class="container-fluid">
        <h2 class="head-style-2">
            <img src="~/Content/Layout/images/icons8-fire-48.png" />Bộ sưu tập
        </h2>
        <br />
        <div class="btn-22">
            <a href="@Url.Action("AllMostPopular","Ajax")" data-ajax="true" data-ajax-method="GET" data-ajax-update="#change" data-ajax-mode="replace"><span class="span"><b>XEM TẤT CẢ</b></span></a>
        </div>
        <br />
        <br />
        <div class="masonry">
            @foreach(var item in Model)
            {
                <div class="item1">
                    <center>
                        <a href="@Url.Action("CollectionsDetail","View", new {@id = item.product_id})"><span style="color: black">@item.collection_name ></span></a>
                        <br />
                        <small>15 sp</small>
                        <br />
                        <br />
                    </center>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <img src="~/Content/Layout/images/@item.collection_image1" style="width: 100%; height: 50px; display: block">
                            </div>
                            <div class="col-md-4">
                                <img src="~/Content/Layout/images/@item.collection_image2" style="width: 100%; height: 50px; display: block">
                            </div>
                            <div class="col-md-4">
                                <img src="~/Content/Layout/images/@item.collection_image3" style="width: 100%; height: 50px; display: block">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</center>
<br />
<br />
