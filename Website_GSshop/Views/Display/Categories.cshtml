@using Website_GSshop.Models
@model List<Product>
<div class="container-fluid">
    <h2 class="article-list__heading"><img src="~/Content/Layout/images/icons8-fire-48.png" width="40" /><a href="#">Danh mục hàng</a></h2>
</div>
<div class="container-fluid">
    <div class="container-fluid" style="background-color: #f9f9f9">
        <nav class="mt-4">
            @foreach (var item in Model.Take(2))
            {
                <ul class="menu-categories">
                    @foreach (var item1 in Model.Take(8))
                    {
                        <li class="li">
                            <a class="a" href="@Url.Action("CategoriesDetail","View", new {@id = item1.product_id}))">
                                <img class="mt-2" src="~/Content/Layout/images/@item1.product_image" style="height: 130px; width: 130px">
                                <br />
                                <span class="text-dark">@item1.product_name</span>
                            </a>
                        </li>
                    }
                </ul>
            }
        </nav>
        <br />
    </div>
</div>
<br />

