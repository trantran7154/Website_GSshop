@using Website_GSshop.Models
@model List<Product>
<div class="container-fluid">
    <h2 class="head-style-2">
        <img src="~/Content/Layout/images/icons8-fire-48.png" />Danh mục hàng
    </h2>
    <br />
    <br />
    <table class="table table-bordered">
        <tbody>
            @for (var i = 0; i < 2; i++)
            {
                <tr>
                    @for (var j = 0; j < 8; j++)
                    {
                        <td>
                            <div class="item-info-product ">
                                <div class="men-thumb-item">
                                    <img src="~/Content/Layout/images/m1.jpg" alt="" style="width: 90px">
                                </div>
                                <span class="item_price">Áo thun</span>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
